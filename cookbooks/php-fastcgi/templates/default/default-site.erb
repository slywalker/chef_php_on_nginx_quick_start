server {
  listen   80;
  server_name  <%= node[:hostname] %>;

  access_log  <%= node[:nginx][:log_dir] %>/localhost.access.log;

  root   /var/www/nginx-default;

  location / {
    index  index.html index.htm;
  }

  location ~ \.php$ {
    include  fastcgi_params;
    fastcgi_pass  127.0.0.1:9000;

    keepalive_timeout  0;
  }
}
