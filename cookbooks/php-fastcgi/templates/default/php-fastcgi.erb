#
# Settings for php-cgi in external FASTCGI Mode
#

# Should php-fastcgi run automatically on startup? (default: no)

START=yes

# Which user runs PHP? (default: www-data)

EXEC_AS_USER=www-data

# Host and TCP port for FASTCGI-Listener (default: localhost:9000)

FCGI_HOST=<%= node[:php_fastcgi][:host] %>
FCGI_PORT=<%= node[:php_fastcgi][:port] %>

# Environment variables, which are processed by PHP

PHP_FCGI_CHILDREN=<%= node[:php_fastcgi][:chirdren] %>
PHP_FCGI_MAX_REQUESTS=<%= node[:php_fastcgi][:max_requests] %>